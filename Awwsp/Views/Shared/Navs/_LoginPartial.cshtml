@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Admin") || User.IsInRole("Parent") || User.IsInRole("Coach") || User.IsInRole("HeadCoach"))
    {


        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = " ml-auto" }))
        {
            @Html.AntiForgeryToken()

            <ul class="navbar-nav ml-auto px-0">
                <li class="nav-item px-0">
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Parent", routeValues: null, htmlAttributes: new { @class = "nav-link", title = "Parent site" })
                </li>
                <li class="nav-item px-0"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {
        <ul class="navbar-nav ml-auto ">
            <li class="nav-item text-white">
             @Html.ActionLink("Hello " + User.Identity.GetUserName()+"!","Index","Player", routeValues: null, htmlAttributes: new { @class = "nav-link", title = "Player page" })
            </li>
            <li class="nav-item">
              @Html.ActionLink(" Log Off", "SignOut", "Child",null, new { @class = "nav-link" })
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
        <li class="nav-item">
            @Html.ActionLink("Player Log in", "Login", "Child", null, new { @class = "nav-link" })
        </li>
    </ul>

}



