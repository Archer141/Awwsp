
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @* MDB Bootstrap *@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" type="text/css">
    <link rel="stylesheet" href="~/Content/MDB-Free_4.11.0/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/MDB-Free_4.11.0/css/mdb.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/MDB-Free_4.11.0/css/style.css" type="text/css">
    <link rel="stylesheet" href="~/Content/MDB-Free_4.11.0/css/addons/datatables.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <base href="https://localhost:44304/" />
</head>

<body class="h-100  d-flex flex-column"  >

    <div >

        <!-- Navbar -->
        @{Html.RenderPartial("_NavIndex"); }
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div id="page-container " class="pb-3">

            <!-- Main content -->
            <div id="content-wrap" class="content p-0 ">

                @RenderBody()



            </div>
            <!-- /.content -->
        </div>

        <!-- Main Footer -->
      
            <div id="footer" class=" mt-auto text-center container-fluid ">
                All rights reserved &copy; @DateTime.Now.Year - Football Academy Adrian Piaścik
            </div>
      
    </div>
    <!-- ./wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/MDB-Free_4.11.0/js/addons/datatables.min.js"></script>

</body>
</html>

