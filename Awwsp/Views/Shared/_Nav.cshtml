<head>
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
</head>


<nav class="main-header navbar navbar-expand-xl    navbar-dark">
    <ul class="navbar-nav">
        <li class="nav-item font-weight-normal navbar-toggle toggled collapsed d-block d-xl-none " data-toggle="collapse" data-target="#navbar-collapse">
            <a class="nav-link px-2"  ><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item font-weight-normal">
            <a class="nav-link px-2" data-widget="pushmenu" href="#"><i class="fas fa-arrows-alt-h"></i></a>
        </li>
    </ul>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse " id="navbar-collapse">
        <ul class="navbar-nav ">

            <li class="nav-item  ">
                @Html.ActionLink("News", "Index", "News", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item ">
                <a href="/Calendar" class="nav-link">Calendar</a>
            </li>
            <li class="nav-item ">
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
            </li>

            <li class="nav-item ">
                @Html.ActionLink("Gallery", "Index", "Photo", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item ">

            </li>

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin") || User.IsInRole("Coach") || User.IsInRole("HeadCoach"))
                {

                    <li class="nav-item  font-weight-bold">
                        @Html.ActionLink("Coach", "Index", "Coach", null, new { @class = "nav-link " })
                    </li>
                }
                else
                {
                    if (User.IsInRole("Parent"))
                    {
                    <li class="nav-item  font-weight-bold">
                        @Html.ActionLink("Player", "Index", "Player", null, new { @class = "nav-link" })
                    </li>}
                }
                if (User.IsInRole("Parent"))
                {
                    <li class="nav-item font-weight-bold ">
                        @Html.ActionLink("Parent", "Index", "Parent", null, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item  font-weight-bold">
                        @Html.ActionLink("Player", "Index", "Player", null, new { @class = "nav-link" })
                    </li>
                }

            }

        </ul>
        @{Html.RenderPartial("_LoginPartial");}
    </div>
</nav>



    <!-- AdminLTE -->
    <script src="~/Scripts/dist/js/adminlte.js"></script>
