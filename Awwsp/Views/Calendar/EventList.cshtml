@model IEnumerable<Awwsp.Models.Event>

@{
    ViewBag.Title = "EventList";
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
}
    <div class="container-fluid ">
        <div class="mt-2">
            <p class="text-center h2">All events in database</p>
            <hr />
        </div>
        <div class="table-responsive-xl table-responsive-sm">
            <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AgeGroup.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Start)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.End)
                        </th>
                  
                        <th>
                            @Html.DisplayNameFor(model => model.AllDay)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AgeGroup.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Start)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.End)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.AllDay)
                            </td>
                            <td>
                                <div class="btn-group-sm flex-center">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.AgeGroupID }, new { @class = "btn btn-default m-1" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.AgeGroupID }, new { @class = "btn btn-danger m-1" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#tab').DataTable();
                $('.dataTables_length').addClass('bs-select');
            });
        </script>
