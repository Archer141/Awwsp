@model Awwsp.ViewModels.EventCreateVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
}


<div class="d-flex min-vh-100 flex-column container-fluid">
    <div class="row bg-light flex-fill fill d-flex justify-content-start">
        <!-- I want this row height to filled the remaining height -->
        <div class="col deep-blue-gradient portlet-container portlet-dropzone bg-transparent p-0">
            <!-- if row is not the right to stretch the remaining height, this column also fine -->
            <div class="view flex-center">
                <div class="container-fluid full-bg-image d-flex align-items-center justify-content-center mask flex-center rgba-black-slight ">
                    <div class="row d-flex justify-content-center">
                        <div id="square" class="col-md-12 text-center">

                            @using (Html.BeginForm("Create", "Calendar", FormMethod.Post, new { @class = "text-center border border-light p-5", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "white-text" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label  " })
                                        <div class=" ">
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "white-text" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Start, htmlAttributes: new { @class = "control-label " })
                                        <div class=" ">
                                            @Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Start, "", new { @class = "white-text" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.End, htmlAttributes: new { @class = "control-label  " })
                                        <div class=" ">
                                            @Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.End, "", new { @class = "white-text" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-bolder">Repeted throught how many weeks.</label>
                                        @Html.EditorFor(model => model.RepetedThroughtWeeks, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.RepetedThroughtWeeks, "", new { @class = "white-text" })

                                    </div>

                                    <div class="form-group">
                                        <div class="col custom-control custom-checkbox justify-content-center">
                                            @Html.EditorFor(model => model.AllDay, new { htmlAttributes = new { @class = "custom-control-input" } })
                                            @Html.LabelFor(model => model.AllDay, htmlAttributes: new { @class = "custom-control-label " })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AgeGroupID, "Choose team", htmlAttributes: new { @class = "control-label  " })
                                        <div class=" ">
                                            @Html.DropDownList("AgeGroupID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.AgeGroupID, "", new { @class = "white-text" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="">
                                            <input type="submit" value="Create" class=" btn-block  btn btn-primary" />
                                            @Html.ActionLink("Back to List", "Index", null, new { @class = " btn-block  btn btn-success" })

                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
