@model IEnumerable<Awwsp.Models.Child>

@{
    ViewBag.Title = "Index";
}
<div class="container ">
    <div class="mt-2">
        <p class="h2 text-center">Your children registred in academy</p>
        <hr />
    </div>
    <div class="table-responsive-xl table-responsive-sm">
        <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AgeGroup.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ChildFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ChildLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AgeGroup.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChildFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChildLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                       
                        <td>
                            <div class="btn-group-sm flex-center ">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ChildID }, new { @class = "btn btn-dark m-1" })
                                @if (item.IsSignOut)
                                {
                                    @Html.ActionLink("Sign In", "SignInAcademy", new { id = item.ChildID }, new { @class = "btn btn-success m-1" })

                                }
                                else
                                { 
                                    @Html.ActionLink("Sign Out", "SignOutAcademy", new { id = item.ChildID }, new { @class = "btn btn-danger m-1" })
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tab').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>

