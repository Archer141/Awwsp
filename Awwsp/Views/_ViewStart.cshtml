@using Microsoft.AspNet.Identity

@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);

    switch (CurrentName)
    {
        case "Parent":
            Layout = "~/Views/Shared/_LayoutParent.cshtml";
            break;
        case "Player":
            Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
            break;
        case "Coach":
            Layout = "~/Views/Shared/_LayoutCoach.cshtml";
            break;
        case "Child":
            Layout = "~/Views/Shared/_LayoutParent.cshtml";
            break;
        case "Trophy":
            Layout = "~/Views/Shared/_LayoutCoach.cshtml";
            break;
        case "Admin":
            Layout = "~/Views/Shared/_LayoutCoach.cshtml";
            break;
        case "Notification":
            Layout = "~/Views/Shared/_LayoutCoach.cshtml";
            break;
        case "AgeGroup":
            Layout = "~/Views/Shared/_LayoutCoach.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}  