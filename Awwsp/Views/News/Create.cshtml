@model Awwsp.Models.News

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <section class="jumbotron text-center ">
        <div class="container">
            <h1>Aktualności</h1>

            <input type="submit" value="Save" class="btn btn-dark" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })
        </div>
    </section>
    <div class="py-5 bg-info flex-column">
        <div class="container">




            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group shadow-textarea ">
                    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.TextAreaFor(model => model.Text, 3, 5, new { @class = "form-control z-depth-1", @placeholder = "Write something here..." })
                    </div>
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

                </div>


                <div class="form-group">
                    Photo
                    <div>
                        @Html.DropDownList("PhotoID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PhotoID, "", new { @class = "text-danger" })
                    </div>
                </div>
               
            </div>



        </div>
    </div>
}
<div style="min-height:100px">

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
