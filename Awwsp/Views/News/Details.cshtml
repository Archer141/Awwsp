@model Awwsp.Models.News

@{
    ViewBag.Title = "Details";
}

@{
    var base64 = Convert.ToBase64String(Model.Photo.Image);
    var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
}

<section class="jumbotron text-center  ">
    <div class="container">
        <h1>@Model.Title</h1>
        <p class="lead text-muted">@Model.Text</p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.NewsID }, new { @class = "btn btn-dark" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })
        @Html.ActionLink("Delete", "Delete", new { id = Model.NewsID }, new { @class = "btn btn-danger" })
    </div>
</section>

<div class="py-5 bg-info d-flex align-content-center">
    <div class="container">
        <div class="jumbotron text-center" style="background-image:url(@imgSrc)">
        </div>
    </div>
</div>
