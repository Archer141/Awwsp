@model Awwsp.Models.News

@{
    ViewBag.Title = "Details";
}

@{
    var base64 = Convert.ToBase64String(Model.Photo.Image);
    var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
}
<div class="py-4 my-2 bg-light h-100 ">
    <div class="container ">
        <div class="jumbotron text-center" style="background-image:url(@imgSrc)">
        </div>
    </div>
</div>
   
<div class="container d-flex justify-content-center" > <h1>@Model.Title</h1></div>
<div class="py-2 ">
    <div class="container">
        <p>>@Model.Text</p>
    </div>
    <div class="btn-group-lg ">
        @Html.ActionLink("Edit", "Edit", new { id = Model.NewsID }, new { @class = "btn btn-sm btn-outline-secondary" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-outline-secondary" })
    </div>

</div>

