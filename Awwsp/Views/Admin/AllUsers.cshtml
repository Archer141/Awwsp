@model IEnumerable<Awwsp.Models.ApplicationUser>

@{
    ViewBag.Title = "AllUsers";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}
    <div class="container-fluid">
        <div class="text-center">
            <h2 class="display-3 mt-2">All registred users</h2>

            <p>
                @Html.ActionLink("Create New", "Account",null,new { @class="btn btn-outline-info"})
            </p>

        </div>
        <div class="table-responsive-xl ">
            <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th scope="col" class="th-sm">
                            First Name
                        </th>
                        <th scope="col"class="th-sm">
                           Last Name
                        </th>
                        <th scope="col"class="th-sm">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <th scope="col"class="th-sm">
                            @Html.DisplayNameFor(model => model.SecurityStamp)
                        </th>
                        <th scope="col"class="th-sm">
                          Phone Number
                        </th>

                        <th scope="col"class="th-sm">
                          User Name
                        </th>
                        <th scope="col"class="th-sm"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SecurityStamp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                <div class=" btn-group-sm flex-center">
                                    @Html.ActionLink("Change role", "ChangeRole", new { id = item.Id }, new { @class = "btn btn-default m-1" })
                                    @if (item.UserName != User.Identity.Name)
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger m-1" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger disabled m-1" })

                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
              
            </table>
        </div>
    </div>

<script>
    $(document).ready(function () {
        $('#tab').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
