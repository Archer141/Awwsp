@model Awwsp.ViewModels.AssignVm

@{
    ViewBag.Title = "Assign";
}

<div class="container">
    <div class="mt-2">
        <p class="h2 text-center">Assign trophy @Model.Trophy.Name</p>
        <hr />
    </div>
    <div class="table-responsive-xl table-responsive-sm">
        <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        Team 
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AgeGroups)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="btn-group-sm  flex-center">

                                @if (item.Children == null||item.Children.Count() == 0)
                                {
                                    @Html.ActionLink("Assign", "AssignConfirmed", new { trophyId = Model.Trophy.TrophyID, ageGroupId = item.AgeGroupId }, new { @class = "btn disabled btn-warning m-1" })

                                }
                                else
                                { @Html.ActionLink("Assign", "AssignConfirmed", new { trophyId = Model.Trophy.TrophyID, ageGroupId = item.AgeGroupId }, new { @class = "btn  btn-warning m-1" })

                            }

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tab').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
