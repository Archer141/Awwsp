@model Awwsp.ViewModels.AssignVm

@{
    ViewBag.Title = "Assign";
}

<h2>Assign</h2>
<div class="container-fluid">
    <div class="mt-2">
        <p class="h2">Assign trophy @Model.Trophy.Name</p>
        <hr />
    </div>
    <div class="table-responsive-xl table-responsive-sm">
        <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        Team 
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AgeGroups)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="btn-group-sm flex-center">
                                @Html.ActionLink("Assign", "AssignConfirmed", new { trophyId = Model.Trophy.TrophyID ,ageGroupId = item.AgeGroupID }, new { @class = "btn btn-warning m-1" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tab').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
