@model Awwsp.Models.Photo
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Edit", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <section class="jumbotron text-center ">
        <div class="container">
            <h1>Photo</h1>
            <p class="lead text-muted">Choose new photo from your local directory or just change title. </p>

            <input type="submit" value="Save" class="btn btn-dark" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })



        </div>
    </section>
    <div class="py-5 bg-info flex-column">
        <div class="container">



            @Html.HiddenFor(model=>model.PhotoID)
            @Html.HiddenFor(model=>model.Date)
            @Html.HiddenFor(model=>model.Image)
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group ">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01" name="image1"
                               aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger font-weight-bold" })

                <div class="custom-control custom-checkbox py-3">
                    @Html.EditorFor(model => model.IsTrophy, new { htmlAttributes = new { @class = "custom-control-input", @placeholder = "Password" } })
                    @Html.LabelFor(model => model.IsTrophy, new { @class = "custom-control-label white-text" })
                </div>



            </div>



        </div>
    </div>

}
