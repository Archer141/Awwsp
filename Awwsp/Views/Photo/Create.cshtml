@model Awwsp.Models.Photo

@{
    ViewBag.Title = "Dodaj";
}

@using (Html.BeginForm("Create", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <section class="jumbotron text-center ">
        <div class="container">
            <h1>Photo</h1>
            <p class="lead text-muted">Choose photo from ypuur local directory and add to te gallery </p>

            <input type="submit" value="Save" class="btn btn-dark" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark" })



        </div>
    </section>
    <div class="py-5 bg-info flex-column">
        <div class="container">




            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01" name="image1"
                               aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                </div>
                
                <div class="custom-control custom-checkbox py-3">
                    @Html.EditorFor(model => model.IsTrophy, new { htmlAttributes = new { @class = "custom-control-input", @placeholder = "Password" } })
                    @Html.LabelFor(model => model.IsTrophy, new { @class = "custom-control-label white-text" })
                </div>


            </div>



        </div>
    </div>

}

<script>
    $('.file-upload').file_upload();
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
