@model Awwsp.Models.Photo

@{
    ViewBag.Title = "Delete";
}

<section class="jumbotron text-center pt-2 pb-3">
    <div class="container">
        <h1>   @Model.Name</h1>
        <h3 class="red-text">Are you sure you want to delete this?</h3>
        <div class="shadow">
            @{

                var base64 = Convert.ToBase64String(Model.Image);
                var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrc" class="img-fluid" />
            }
        </div>

    </div>
</section>
<div class="container justify-content-center d-flex">
    <div class="btn-group">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-dark m-1" })
            @Html.ActionLink("Edit", "Edit", new { id = Model.PhotoID }, new { @class = "btn btn-dark m-1" })
            <input type="submit" value="Delete" class="btn btn-danger m-1" />

        }
    </div>
</div>

<div style="min-height:100px">

</div>