@model IEnumerable<Awwsp.Models.Notification>

@{
    ViewBag.Title = "Index";
}

    <div class="container">
     <div class="mt-2">
         <p class="h2 text-center">Notifications list</p>
         <hr />
     </div>
        <div class="table-responsive-xl table-responsive-sm">
            <table id="tab" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AgeGroup.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Text)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AgeGroup.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Text)
                            </td>
                            <td>
                                <div class="btn-group-sm flex-center ">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-dark m-1 " })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default m-1" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger m-1" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

<script>
    $(document).ready(function () {
        $('#tab').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
