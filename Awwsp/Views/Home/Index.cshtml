@model Awwsp.ViewModels.HomeVM
@{
    ViewBag.Title = "Home Page";
}
 
<div class="container pb-2 ">
    <div class="pt-3">

        @foreach (var item in Model.Notifications)
        {
            if (item.ChildId != null)
            {
                <div class="alert alert-danger alert-dismissible fade show d-flex flex-fill" role="alert">
                    <strong class="black-text font-weight-bold">@item.Child.FullName:&nbsp;</strong><strong>@item.Title &nbsp;</strong> @item.Text
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-info alert-dismissible fade show d-flex flex-fill" role="alert">
                    <strong class="black-text font-weight-bold">@item.AgeGroup.Name : &nbsp;</strong><strong>@item.Title &nbsp;</strong> @item.Text
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        }

    </div>

    <div id="demo" class="carousel slide pt-3" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner ">
            <div class="carousel-item active">
                <img class="d-block  h-100 w-100" src="~/Content/Images/action-ball-field-game-274506.jpg" />
                <div class="mask rgba-black-light card-img-overlay text-white d-flex justify-content-center align-items-end">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <p class="display-4"><a class="  font-weight-bolder light-green-text hoverable" href="/Account/Register">Register now</a> and join to our academy!</p>
                    }
                    else
                    {
                        <p class="display-4">Welcome in the academy!</p>
                    }

                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid h-100 w-100" src="~/Content/Images/action-athletes-ball-blur-274422copa.jpg" />
                <div class="mask rgba-black-light card-img-overlay text-white d-flex justify-content-center align-items-start">
                    <p class="display-4 text-decoration-none">Great fun and substantive trainings in one! </p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block h-100 w-100" src="~/Content/Images/high-angle-photography-of-soccer-field-2935979.jpg" />
                <div class="mask rgba-black-light card-img-overlay text-white d-flex justify-content-center align-items-center">
                    <p class="display-4 text-decoration-none">Great pitches to train.</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>


    <div class="card-deck pt-3">

        @foreach (var item in Model.NewsTop3)
        {
            <!-- News jumbotron -->
            <div class="jumbotron text-center hoverable ">

                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-4 offset-md-1 mx-3 my-3">


                        @if (item.Photo != null)
                        {
                            var base64 = Convert.ToBase64String(item.Photo.Image);
                            var imgSrc = string.Format("data:image/gif;base64,{0}", base64);
                            <!-- Featured image -->

                            <div class="view overlay">
                                <img src="@imgSrc" style="height: 225px; width: 100%; display: block; object-fit:cover" class="img-fluid galery-image">
                                <a href="/News/Details/@item.NewsID">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>

                        }
                        else
                        {

                            <!-- Featured image -->
                            <div class="view overlay">
                                <img src="~/Content/Images/Food/walnuts-in-a-bowl-1823476.jpg" style="height: 225px; width: 100%; display: block; object-fit:cover" class="img-fluid">
                                <a>
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>


                        }

                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-7 text-md-left ml-3 mt-3">



                        <h4 class="h4 mb-4">@item.Title</h4>

                        <p class="font-weight-normal">
                            @item.Text
                        </p>
                        @*  <p class="font-weight-normal">by <a><strong>@item.</strong></a>, @item.Date</p>*@

                        <div class="d-inline-block d-flex">
                            <a href="/News/Details/@item.NewsID" class="btn btn-success">Read more</a>

                            <p class="ml-auto">@item.Date.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </div>
            <!-- News jumbotron -->

            @*<div class="card black-text ">
                <a href="/News/Details/@item.NewsID" class="text-decoration-none">
                    <div class="card-header black-text text-center ">
                        @item.Title
                    </div>
                    <div class="card-body black-text text-center">
                        @item.Text
                    </div>
                </a>
            </div>*@

        }
